#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

// Function prototypes
void studentLetterGradeCalculator(void);
void unitConverter(void);
void currencyConverter(void);
void simpleInterestCalculator(void);
void exitProgram(void);
void displayWelcomeMessage(void);

// Main Function
int main()
{
    //Declaring the variables
    int choice;

    ///Welcome Message
    displayWelcomeMessage();

	//Do-while loop for the menu options
    do {
            //Displaying menu options using if statements
                printf("1. Student Letter Grade Calculator\n");
                printf("2. Unit Converter\n");
                printf("3. Currency Converter\n");
                printf("4. Simple Interest Calculator\n");
                printf("5. Exit Program\n");
            
        
        //Get user input choice
        scanf(" %d%*[^\n]", &choice);

        //Apply the user's choice using switch statements
        switch (choice) {
        case 1:
        {
            studentLetterGradeCalculator();
            int choice;

            //Do While loop Return to Menu option
            do
            {
                
                printf("\nWhat would you like to do?\n");
                printf("\n0. Convert Another Student Grade\n");
                printf("\n1. Return to Main Menu\n\n");
                scanf(" %d%*[^\n]", &choice);

                if (choice == 0)
                {
                    studentLetterGradeCalculator();
                    continue;
                  
                }
                else if (choice != 0 && choice != 1)
                {
                    printf("\nThat is an invalid input\n");
                    continue;
                }
            } while (choice != 1);
            continue;
        }
        case 2:
        {
            unitConverter();
            int choice;
            
            //Do While loop Return to Menu option
            do
            {
                printf("\nWhat would you like to do?\n");
                printf("\n0. Perform Another Unit Conversion\n");
                printf("\n1. Return to Main Menu\n\n");
                scanf(" %d%*[^\n]", &choice);

                if (choice == 0)
                {
                    unitConverter();
                    continue;
                }
                else if (choice != 0 && choice != 1)
                {
                    printf("\nThat is an invalid input\n");
                    continue;
                }
            } while (choice != 1);
            break;
        }
        case 3:
        {
            currencyConverter();
            int choice;

            //Do While loop Return to Menu option
            do
            {
                printf("\nWhat would you like to do?\n");
                printf("\n0. Perform Another Currency Conversion\n");
                printf("\n1. Return to Main Menu\n\n");
                scanf(" %d%*[^\n]", &choice);

                if (choice == 0)
                {
                    currencyConverter();
                    continue;
                }
                else if (choice != 0 && choice != 1)
                {
                    printf("\nThat is an invalid input\n");
                    continue;
                }
            } while (choice != 1);
            break;
        }
        case 4:
            simpleInterestCalculator();
            int choice;

            //Do While loop Return to Menu option
            do
            {
                printf("\nWhat would you like to do?\n");
                printf("\n0. Perform Another Simple Interest Calculation\n");
                printf("\n1. Return to Main Menu\n\n");
                scanf(" %d%*[^\n]", &choice);

                if (choice == 0)
                {
                    simpleInterestCalculator();
                    continue;
                }
                else if (choice != 0 && choice != 1)
                {
                    printf("\nThat is an invalid input\n");
                    continue;
                }
            } while (choice != 1);
            break;
        case 5:
            exitProgram();
            break;
        default:
            printf("Invalid choice, please try again.\n");
        }
    } while (choice != 5);
	return 0;
}
 // Welcome message
void displayWelcomeMessage(void)
{
    printf("Welcome to the Multi-Functional Calculator Program!\n");
}




// Student Letter Grade Calculator
void studentLetterGradeCalculator(void)
{
	//Declaring variables
    int score;
    int validScore = 0;
    
    //Screen Display
   
        printf("Student Letter Grade Calculator:\n");
        printf("A: 80-100, B: 70-79, C: 60-69, D: 50-59, F: 0-49\n");
        printf("Enter the student's score (0-100): \n");

        //While loop for score input checking for correct range of values
        while (!validScore) {
            scanf("%d", &score);
            if (score >= 0 && score <= 100) {
                validScore = 1;
            }
            else {
                printf("\nInvalid input. Please enter a score between 0 and 100: \n");
            }
        }

        //If statements to display range of scores and letter grades
        if (score >= 80) {
            printf("Letter Grade: A\n");
        }
        else if (score >= 70) {
            printf("Letter Grade: B\n");
        }
        else if (score >= 60) {
            printf("Letter Grade: C\n");
        }
        else if (score >= 50) {
            printf("Letter Grade: D\n");
        }
        else printf("Letter Grade: F\n");
        return;
       
   
}


// Unit Converter
void unitConverter(void)
{
	//Declaring variables
    int choice;
    float celsius;
	float fahrenheit;
	float kg;
	float pounds;
	float meters;
	float feet;
    
	//While loop for the display converter
    while (1) {

        printf("Unit Converter:\n");
        printf("1. Convert Celsius to Fahrenheit\n");
        printf("2. Convert Kilograms to Pounds\n");
        printf("3. Convert Meters to Feet\n");
        scanf(" %d%*[^\n]", &choice);
        
		//If statements for inputing values such as celicus, fahrenheit, kg, pounds, meters and feet
        if (choice == 1) {
            printf("Please enter the temperature in celsius\n");
            scanf(" %f%*[^\n]", &celsius);
            fahrenheit = (celsius * 9.0f / 5.0f) + 32.0f;
            printf("Temperature in Fahrenheit is %.2f\n", fahrenheit);
            break;
        }
        else if (choice == 2) {
            printf("Please enter the weight in kilograms\n");
            scanf(" %f%*[^\n]", &kg);
            pounds = kg * 2.20462f;
            printf("Weight in Pounds is %.2f\n", pounds);
            break;
        }
        else if (choice == 3) {
            printf("Please enter the length in meters\n");
            scanf(" %f%*[^\n]", &meters);
            feet = meters * 3.28084f;
            printf("Length in Feet is %.2f\n", feet);
            break;

        }
        else {
            printf("\nInvalid choice, please try again.\n");
        }
	
       
    }
    return;
}

// Currency Converter
void currencyConverter(void)
{
    //Declaring variables
    int choice;
    float usd;
    float cad;
    float eur;
    float convertedAmount;

    //While loop for the display converter
    while (1) {
        
        printf("Currency Converter:\n");
        printf("1. Convert USD to EUR\n");
        printf("2. Convert CAD to USD\n");
        printf("3. Convert EUR to CAD\n");
      
        scanf(" %d%*[^\n]", &choice);

        //If statements for entering values in USD, CAD and EUR 
        
        if (choice == 1) {
            printf("Please enter the amount in USD\n");
            scanf(" %f%*[^\n]", &usd);
            printf("Amount in EUR is %.2f\n", usd * 0.85f);
            break;
        }
        else if (choice == 2) {
            printf("Please enter the amount in CAD\n");
            scanf(" %f%*[^\n]", &cad);
            printf("Amount in USD is %.2f\n", cad * 0.79f);
            break;
        }
        else if (choice == 3) {
            printf("Please enter the amount in EUR\n");
            scanf(" %f%*[^\n]", &eur);
            printf("Amount in CAD is %.2f\n", eur * 1.18f);
            break;
        }
        else {
            printf("\nInvalid choice, please try again.\n");
        }
       
        return;
    }
}

// Simple Interest Calculator

void simpleInterestCalculator(void)
{
    //Declaring variables
    float principal;
    float rate;
    float time;
    float simpleInterest;

	//Calculating simple interest
    printf("Simple Interest Calculator\n");
    printf("Please enter the principal amount\n");
    scanf(" %f%*[^\n]", &principal);
    printf("Please enter the interest rate as a percentage\n");
    scanf(" %f%*[^\n]", &rate);
    printf("Please enter the time period in years\n");
    scanf(" %f%*[^\n]", &time);
    simpleInterest = (principal * rate * time) / 100.0f;
    printf("\nThe Simple Interest is: %.2f\n", simpleInterest);
    printf("Calculation: (%.2f * %.2f * %.2f) / 100 = %.2f\n",
    principal, rate, time, simpleInterest);
    return;

        
   
    
}
// Exit the program
void exitProgram(void)
{
    printf("\nExiting the program. Thank you for using the Multi-Functional Calculator!\n");
    exit(0);
    return;

    
}
